function excur_init() {
  // Include necessary files for private messages.
  if (preg_match('/user\/[0-9]*\/messages/', current_path()) || (isset($_POST['form_id']) && $_POST['form_id'] == 'privatemsg_list')) {
    module_load_include('inc', 'privatemsg', 'privatemsg.pages');
